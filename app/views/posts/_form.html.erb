<%= form_for @post do |f|%>
<%= f.label :title%>
<%=  f.text_field :title %>
<br /> <br />
<%= f.label :content%>
<%=  f.text_area :content %>
<br /> <br />
<%= f.label :author%>
<%=  f.collection_select :blogger_id, @bloggers, :id, :name %>
<br /> <br />
<%= f.label :destination%>
<%=  f.collection_select :destination_id, @destinations, :id, :name %>

<br /> <br />
<%= f.submit %>
<% end %>
<br /><br />
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
